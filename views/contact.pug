extends base.pug

block style
    style
      include ../static/style.css
      include ../static/styleContact.css

block content
    .container 
        .left-container
            h1 <i class="fa-solid fa-phone"></i>  Contact Us

            form(action="/contact", method="post" Class="myForm" onsubmit="myFunction()") 
                input(type="text", Class="myInput", name="name", placeholder="Enter your name..")
                input(type="number", Class="myInput", name="phone", placeholder="Enter your phone..")
                input(type="email", Class="myInput", name="email", placeholder="Enter your email..")
                input(type="text", Class="myInput", name="address", placeholder="Enter your address..")
                input(type="text", Class="myInput", name="dese", placeholder="Enter your concern..")
                button(Class="btn")
                    | submit 

        .right-container
            <i class="fa-solid fa-location-dot"></i>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d30765336.148763806!2d61.02291715666863!3d19.732445881430763!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x30635ff06b92b791%3A0xd78c4fa1854213a6!2sIndia!5e0!3m2!1sen!2sin!4v1695278606610!5m2!1sen!2sin" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

block scripts
    script(src='/static/index.js')
    <script src="https://kit.fontawesome.com/8b54449fd8.js" crossorigin="anonymous"></script>