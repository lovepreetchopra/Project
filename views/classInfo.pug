extends base.pug

block style
  style
    include ../static/style.css
    include ../static/styleClassInfo.css

block content
  .container
    .class-container
      h1 Our Academy Class Information
    .class
      .class-item
        img(src="https://source.unsplash.com/200x200/?Dance,Classical-Ballet-dance", alt="photos")
